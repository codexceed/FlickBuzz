<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailActivity$DetailFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:fontFamily="sans-serif-thin"
            android:textSize="38sp"
            android:textStyle="normal"
            android:textColor="#000000"
            android:id="@+id/movie_title"
            android:textAlignment="textStart"
            android:gravity="center"
            android:background="#990000"
            android:layout_marginBottom="8dp"
            android:padding="8dp"
            android:elevation="8dp"
            />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:id="@+id/movie_highlights"
            android:paddingBottom="16dp">


            <ImageView
                android:layout_width="200dp"
                android:layout_height="250dp"
                android:id="@+id/image_poster"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_margin="0dp"
                android:paddingLeft="10dp"
                android:paddingRight="30dp"
                android:elevation="8dp"
                />

            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="vertical" android:layout_width="wrap_content"
                android:layout_toRightOf="@id/image_poster"
                android:layout_height="wrap_content"
                android:id="@+id/movieDetails_linearLayout"
                android:layout_alignTop="@id/image_poster">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:id="@+id/text_release_date"
                    android:layout_toRightOf="@id/image_poster"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:textSize="30sp"
                    android:textColor="#000000"
                    android:paddingBottom="4dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:id="@+id/text_duration"
                    android:textColor="#000000"
                    android:textSize="20sp"
                    android:paddingBottom="4dp"
                    android:layout_toRightOf="@id/image_poster"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:id="@+id/text_rating"
                    android:textSize="50sp"
                    android:fontFamily="sans-serif-condensed"
                    android:layout_toRightOf="@id/image_poster"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true" />

            </LinearLayout>
        </RelativeLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/movie_highlights"
        android:id="@+id/textView_movieSynopsis"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="5dp"
        android:gravity="left"
        android:textSize="15sp"/>
    </LinearLayout>
</ScrollView>